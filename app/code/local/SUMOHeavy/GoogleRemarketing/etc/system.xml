<config>
    <tabs>
        <sumoheavy translate="label" module="sumoheavy_googleremarketing">
            <label>SUMO Heavy</label>
            <sort_order>999999999</sort_order>
        </sumoheavy>
    </tabs>
    <sections>
        <sumoheavy_googleremarketing translate="label" module="sumoheavy_googleremarketing">
            <label>Google Remarketing</label>
            <tab>sumoheavy</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <googleremarketing translate="label">
                    <label>Remarketing settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <enabled translate="label">
                            <label>Allow Remarketing Tracking</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <google_conversion_id translate="label">
                            <label>Google conversion id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_id>
                        <google_conversion_label translate="label">
                            <label>Google conversion label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_label>
                    </fields>
                </googleremarketing>
            </groups>
        </sumoheavy_googleremarketing>
    </sections>
</config>

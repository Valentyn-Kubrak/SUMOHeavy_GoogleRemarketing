<config>
    <modules>
        <SUMOHeavy_GoogleRemarketing>
            <version>0.1.0</version>
        </SUMOHeavy_GoogleRemarketing>
    </modules>

    <global>
        <blocks>
            <sumoheavy_googleremarketing>
                <class>SUMOHeavy_GoogleRemarketing_Block</class>
            </sumoheavy_googleremarketing>
        </blocks>
        <helpers>
            <sumoheavy_googleremarketing>
                <class>SUMOHeavy_GoogleRemarketing_Helper</class>
            </sumoheavy_googleremarketing>
        </helpers>
    </global>

    <frontend>
        <layout>
            <updates>
                <sumoheavy_globalmessage>
                    <file>sumoheavy/googleremarketing.xml</file>
                </sumoheavy_globalmessage>
            </updates>
        </layout>
    </frontend>

    <default>
        <sumoheavy_googleremarketing>
            <googleremarketing>
                <enabled>0</enabled>
                <google_conversion_id></google_conversion_id>
                <google_conversion_label></google_conversion_label>
            </googleremarketing>
        </sumoheavy_googleremarketing>
    </default>
</config>
